<div ng-repeat="p in products | limitTo : limit">
	<div class="item-border col-xs-12 col-md-3 product_div">
	    <div ng-click="viewProduct(p.product_id)" class="col-md-12 item-inner-padding">
	    	<img class="image image-size" src="{{p.image}}"/>
	    </div>
	    <div class="col-md-12 item-inner-padding">
		    <span class="bold price font-17">${{p.updatedproduct_price | twoDecimal}}</span>
		    <input type="hidden" value="{{p.updatedproduct_price | twoDecimal}}" id="price_{{p.product_id}}"/>
		</div>
		<div class="col-md-12 item-inner-padding">
		    <span class="bold">{{p.product_name}}</span>
		</div>
		<!-- <div class="col-md-12" height="10px !important">
		    <span class="bold">{{p.product_description}}</span>
	    </div> -->
	    <div class="col-md-12 item-inner-padding">
		    <input type="button" class="ff-btn tweet-btn" ng-click="addToCart(p.product_id,p.product_name,p.farmer_id)" value="Add to cart"/>
	    </div>
	</div>
</div>


